@model Order

<form asp-action="Checkout" method="post" role="form">
    <h3 class="my-3">
        You're just one step away from your delicious pies.
    </h3>
    <div class="row">
        <div class="col-6">
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="FirstName" class="form-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="LastName" class="form-label"></label>
                    <input asp-for="LastName" class="form-control" />
                </div>
                <div class="col-12">
                    <label asp-for="AddressLine1" class="form-label"></label>
                    <input asp-for="AddressLine1" class="form-control" />
                </div>
                <div class="col-12">
                    <label asp-for="AddressLine2" class="form-label"></label>
                    <input asp-for="AddressLine2" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="City" class="form-label"></label>
                    <input asp-for="City" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="State" class="form-label"></label>
                    <input asp-for="State" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="ZipCode" class="form-label"></label>
                    <input asp-for="ZipCode" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Country" class="form-label"></label>
                    <input asp-for="Country" class="form-control" />
                </div>
                <div class="col-12">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" />
                </div>
                <div class="col-12">
                    <label asp-for="PhoneNumber" class="form-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                </div>
                <div class="mt-2">
                    <input type="submit" class="btn btn-primary mb-3" value="Complete order" />
                </div>
            </div>
        </div>
    </div>
</form>